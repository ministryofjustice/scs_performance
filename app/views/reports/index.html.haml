%h1 Performance Management Reports

- unless @reports.empty?
  %table.reports
    %thead
      %tr
        %th Number
        %th Action
    %tbody
      - @reports.each do |report|
        %tr
          %td= report.id
          %td
            = link_to('edit', edit_report_path(report))
            - unless report.approved?
              = link_to('approve', approve_report_path(report))

= link_to('New', new_report_path)
