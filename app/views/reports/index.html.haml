%h1 Performance Management Reports

- unless @reports.empty?
  %table.reports
    %thead
      %tr
        %th Number
        %th Action
    %tbody
      - @reports.each do |report|
        %tr
          %td= report.id
          %td
            = link_to('edit', edit_report_path(report))
            - if report.approved?
              - if report.mid_year_approved?
                = link_to('end year review', edit_report_review_path(report, :end_year))
                = link_to('end year approve', edit_report_approval_path(report, :end_year))
              - else
                = link_to('mid year review', edit_report_review_path(report, :mid_year))
                = link_to('mid year approve', edit_report_approval_path(report, :mid_year))
            - else
              = link_to('approve', edit_report_approval_path(report, :initial))

= link_to('New', new_report_path)
