%table.plain
  %tr
    %td
      %p
        %span.label Name
        = current_user.name
      %p
        %span.label Staff number
        = current_user.staff_number
      - if current_user.manager
        %p
          %span.label Line manager
          = current_user.manager.to_s
    %td
      %p
        %span.label Job title and pay band
        = current_user.grade
      %p
        %span.label Current role began from
        = current_user.current_role_start_date
      - if @report
        %p
          %span.label Period of report
          %span#review_period= @report.review_period

- if editable
  %p= link_to('Edit your profile', edit_profile_path)
