%h1 Your profile

%h2 Personal details

= form_for @user, url: profile_path(@user), method: :put do |f|

  .form-group
    = f.label :name, class: 'form-label'
    = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :staff_number, class: 'form-label'
    = f.text_field :staff_number, class: 'form-control'

  .form-group
    = f.label :grade, 'Job title and pay band', class: 'form-label'
    = f.text_field :grade, class: 'form-control'

  .form-group
    = f.label :current_role_start_date, 'Current role began from', class: 'form-label'
    = f.text_field :current_role_start_date, class: 'form-control'

  .form-group
    = f.submit 'Save', class: 'button'
